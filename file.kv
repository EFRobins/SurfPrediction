<MyHomepage>:
    FloatLayout:
        size: root.width,root.height
        GridLayout:
            pos_hint: {"top": 1, "left":1}
            cols: 1
            size_hint: 0.5,0.5
            Image:
                source: "Logo2.jpg"


        Button:
            source:'kivytheme/surfboard'
            text: "Model"
            color: 0,0.5,0.8,1
            pos_hint: {"right": 1,"top":1}
            background_normal: 'kivytheme/defaulttheme.atlas/button_disabled'
            font_size: 40
            size_hint: 0.5,0.5
            on_press: root.manager.current = "Model"

        Button:
            text: "Masirah"
            pos_hint: {"y":0, "x": 0}
            font_size: 40
            size_hint: 0.5,0.5
            on_press: root.manager.current = "Masirah"
        Button:
            text: "Al Ashkirah"
            pos_hint: {"right": 1, "bottom":1}
            size_hint: 0.5,0.5
            font_size: 40
            on_press: root.manager.current = "AlAshkirah"

<Model>:
    Button:
        text: "Home"
        on_press: root.manager.current = "MyLayout"
<AlAshkirah>
    Button:
        text: "Home"
        on_press: root.manager.current = "MyLayout"

<Masirah>
    Button:
        text: "Home"
        on_press: root.manager.current = "MyLayout"



